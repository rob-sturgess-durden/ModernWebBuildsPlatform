# Instagram (existing - optional)
INSTAGRAM_ACCESS_TOKEN=

# Database
DATABASE_PATH=backend/data/orders.db

# Twilio (WhatsApp notifications)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_FROM=+14155238886
WHATSAPP_ENABLED=true

# Email (SMTP - e.g. SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxx
SMTP_FROM=orders@yourdomain.com

# Email (SendGrid API - preferred)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM=orders@yourdomain.com
# Optional for EU regional subusers: eu
SENDGRID_DATA_RESIDENCY=

# SendGrid Inbound Parse webhook (incoming emails -> FastAPI)
# Configure your SendGrid Inbound Parse URL:
#   https://modernwebbuilds.co.uk/api/webhooks/sendgrid/inbound?token=CHANGE_ME
SENDGRID_INBOUND_TOKEN=CHANGE_ME

# Uploads / media
# By default uploads go into backend/data/uploads and are served at /api/media/...
# For production you can point UPLOAD_DIR at a persistent path.
UPLOAD_DIR=
UPLOAD_MAX_BYTES=6291456
UPLOAD_BASE_PATH=/api/media

# App
FRONTEND_URL=http://localhost:5174
PUBLIC_BASE_URL=https://modernwebbuilds.co.uk
SUPER_ADMIN_TOKEN=superadmin-change-me

# WhatsApp opt-in template (Twilio Content Template SID)
TWILIO_OPTIN_ENABLED=true
TWILIO_OPTIN_CONTENT_SID=HXxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WhatsApp owner "new order" template (recommended for production)
TWILIO_OWNER_NEW_ORDER_CONTENT_SID=
